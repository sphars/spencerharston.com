<footer class="w-full p-0 text-sm">
    <div class="w-full max-w-5xl flex flex-row flex-wrap items-center justify-between gap-1 my-0 mx-auto pt-20 pb-8 px-4">
        <div class="flex flex-col gap-1">
            <div>&copy; 2020&ndash;2023 {{ metadata.owner }}</div>
            <div><a href="/colophon">Colophon</a></div>
        </div>
        <div class="flex flex-col gap-1 text-right">
            <div class="flex flex-row items-center gap-x-2">
                <a href="/feed.xml" title="RSS Feed">{% iconify "rss", "18" %}</a></span>
                <a href="https://github.com/{{ metadata.github_handle }}" title="GitHub profile">{% iconify "brand-github", "18" %}</a>
                <a href="https://twitter.com/{{ metadata.twitter_handle }}" title="Twitter profile">{% iconify "brand-twitter", "18" %}</a>
                <a href="https://mastodon.social/{{ metadata.mastodon_handle }}" title="Mastodon profile" rel="me">{% iconify "brand-mastodon", "18" %}</a>
                <button id="dark-mode-button" class="hover:text-blue-600 dark:hover:text-sky-500" title="Toggle dark mode">{% iconify "moon", "18" %}</button>
            </div>
            <div class="font-mono" title="Last updated: {{ git.commit_date }}">{% commit_link git.short_sha %}</div>
        </div>
    </div>
</footer>