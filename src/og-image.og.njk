<style>
  .root {
    width: 100%;
    height: 100%;
    padding: 64px;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: space-between;
    background: #24273a;
    color: #cad3f5;
  }

  .header {
    display: flex;
    flex-direction: row;
    font-size: 36px;
    gap: 16px;
  }

  .main {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 8px;
  }

  .title {
    font-size: 64px;
    color: #eab308;
    margin: 16px 0;
  }
  .subheader {
    font-size: 32px;
  }
</style>
<div class="root">
  <div class="header"><b>[sh]</b> spencerharston.com</div>
  <div class="main">
    <h1 class="title">{{ title | safe }}</h1>
    {% if description %}
      <div class="subheader">{{ description | safe }}</div>
    {% endif %}
  </div>
</div>
