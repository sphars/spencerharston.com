---
layout: layouts/base
---

<article>
    <header class="post-header">
        <h1>{{ title }}</h1>

        <!-- {% if image %}
        {% imageHeader image, imageAlt, "100vw" %}
        {% endif %}
 -->
        <p class="subheading">{{ description }}</p>
        <div class="post-meta flex-row text-s">
            <!-- <div class="flex-row small-gap">
                <span class="has-icon">{% iconify "user", 20 %}</span>
                <span>{{ author or metadata.author }}</span>
            </div> -->
            <div class="flex-row small-gap">
                <span class="has-icon">{% iconify "calendar", "20" %}</span>
                <time datetime="{{ page.date | dateHtmlString }}" title="{{ page.date | dateHtmlString }}">{{ page.date | dateReadable }}</time>
            </div>
            <div class="flex-row small-gap">
                <span class="has-icon">{% iconify "clock", "20" %}</span>
                <span> {{ content | readingTime }} to read </span>
            </div>
        </div>
    </header>
    <hr>
    <div class="post-content">
        {{ content | safe }}
    </div>
</article>

<div class="post-footer">
    {% if updated %}
        <p class="text-s"><i>Last Updated: <time datetime="{{ updated | dateHtmlString }}" title="{{ updated | dateHtmlString }}">{{ updated | dateReadable }}</time></i></p>
    {% endif %}
    <div class="flex-row small-gap">
        <div class="has-icon">{% iconify "tag" %}</div> 
        <ul class="tag-list">
            {% for tag in tags %}
            <li class="tag"><a href="/tags/{{ tag }}/">{{ tag }}</a></li>
            {% endfor %}
        </ul>
    </div>
    
    <p class="text-s">
        This post is licensed under <a href="http://creativecommons.org/licenses/by/4.0/">CC BY 4.0</a> by the author.
        {%- if image %} Header photo from <a href="{{ image }}">Unsplash</a>.<br>{%- endif %}
        The source for this page is available on {% page_source_link 'GitHub' %}.
    </p>
</div>