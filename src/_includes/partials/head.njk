<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<title>{{ renderData.title or title or metadata.site_title }}</title>

<!-- General -->
<meta name="title" content="{{ renderData.title or title or metadata.site_title }}">
<meta name="description" content="{{ description or metadata.description }}">
<meta name="author" content="{{ author or metadata.author }}">
<meta name="owner" content="{{ metadata.owner }}">
<meta name="copyright" content="{{ author or metadata.owner }}">
<meta name="url" content="{{ metadata.base_url }}{{ page.url }}">
<meta name="generator" content="{{ eleventy.generator }}">

<!-- Open Graph -->
<meta property="og:title" content="{{ renderData.title or title or metadata.site_title }}">
{%- if type == "post" %}
<meta property="og:type" content="article">
<meta property="article:author" content="{{ author or metadata.author }}">
<meta property="article:published_time" content="{{ date | dateISO }}">
{%- if updated %}
<meta property="article:modified_time" content="{{ updated | dateISO }}">
{%- endif %}
{%- else %}
<meta property="og:type" content="website">
{%- endif %}
<meta property="og:url" content="{{ metadata.base_url }}{{ page.url }}">
{%- if image %}
<meta property="og:image" content="{% imageMeta image %}">
{%- endif %}
<meta property="og:site_name" content="{{ metadata.site_title }}">
<meta property="og:description" content="{{ description or metadata.description }}">

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:creator" content="{{ metadata.twitter_handle }}">
{%- if image %}
<meta name="twitter:image" content="{% imageMetaTW image %}">
{%- endif %}
{%- if imageAlt %}
<meta name="twitter:image:alt" content="{{ imageAlt }}"> 
{%- endif %}

<!-- Icons -->
<link rel="apple-touch-icon" sizes="180x180" href="/static/img/icons/apple-touch-icon.png?v=2">
<link rel="icon" type="image/png" sizes="32x32" href="/static/img/icons/favicon-32x32.png?v=2">
<link rel="icon" type="image/png" sizes="16x16" href="/static/img/icons/favicon-16x16.png?v=2">
<link rel="shortcut icon" href="/static/img/icons/favicon.ico?v=2">

<link rel="stylesheet" type="text/css" href="/styles/site.css">
<script>
    if (localStorage.theme === "dark" || (!("theme" in localStorage) && window.matchMedia("(prefers-color-scheme: dark)").matches)) {
        document.documentElement.classList.add("dark");
    } else {
        document.documentElement.classList.remove("dark");
    }
</script>
<script src="/static/js/darkmode.js" defer></script>

{%- if env.environment == "production" %}
<script data-goatcounter="https://suave-sandwich.goatcounter.com/count" async src="//gc.zgo.at/count.js"></script>
{%- endif %}