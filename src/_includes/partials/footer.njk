<footer class="w-full p-0">
    <div class="w-full max-w-3xl flex flex-row flex-wrap items-end justify-between gap-4 my-0 mx-auto pt-8 pb-4 px-4 text-sm">
        <div class="flex flex-col gap-1">
            <div>
                <a href="/colophon">Colophon</a> | <a href="/uses">Uses</a>
            </div>
            <div>
                &copy; 2020&ndash;2024 {{ metadata.owner }}
            </div>
        </div>
        <div class="text-xs">
            Built: <span class="font-mono" title="{{ buildInfo.time.raw | dateISO }}">{{ buildInfo.time.formatted }}</span><br>
            Commit: <span class="font-mono" title="{{ buildInfo.git.commitDate | dateISO }}"><a href="{{ metadata.repo }}/tree/{{ buildInfo.git.hash.long }}">{{ buildInfo.git.hash.short }}</a></span>
        </div>
    </div>
</footer>