{%- macro postsList(posts) -%}

<ul class="mt-8">
    {% for post in posts | sortDesc %}
    <li class="py-8 px-0 border-b border-solid dark:border-b-gray-800 last-of-type:border-none">
        <h2 class="text-xl mb-2"><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
        <div class="flex flex-row flex-wrap gap-y-2">
            <div class="text-sm">
                <time datetime="{{ post.data.date | dateHtmlString }}">{{ post.data.date | dateReadable }}</time>
                {% if post.data.updated %}
                | Updated: <time datetime="{{ post.data.updated | dateHtmlString }}">{{ post.data.updated | dateReadable }}</time>
                {% endif %}
                <span> | {{ post | readingTime }}</span>
            </div>
        </div>
    </li>
    {% endfor %}
</ul>

{% endmacro %}