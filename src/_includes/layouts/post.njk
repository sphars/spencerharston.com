---
layout: layouts/base
---

<article class="mb-12">
    <header class="pb-4">
        <h1 class="text-4xl mt-12 mb-8 mx-0">{{ title }}</h1>

        <!-- {% if image %}
        {% imageHeader image, imageAlt, "100vw" %}
        {% endif %}
 -->
        <p class="italic mb-3">{{ description }}</p>
        <div class="inline-flex flex-row flex-wrap items-center gap-x-4 gap-y-2 text-sm">
            <!-- <div class="flex-row small-gap">
                <span class="has-icon">{% iconify "user", 20 %}</span>
                <span>{{ author or metadata.author }}</span>
            </div> -->
            <div class="inline-flex flex-row items-center gap-x-2">
                <span class="inline-flex items-center justify-center">{% iconify "calendar", "18" %}</span>
                <time datetime="{{ page.date | dateHtmlString }}" title="{{ page.date | dateHtmlString }}">{{ page.date | dateReadable }}</time>
            </div>
            <div class="inline-flex flex-row items-center gap-x-2">
                <span class="inline-flex items-center justify-center">{% iconify "clock", "18" %}</span>
                <span> {{ content | readingTime }} to read </span>
            </div>
            <div class="inline-flex flex-row items-center gap-x-2">
                <span class="inline-flex items-center justify-center">{% iconify "tag", "18" %}</span> 
                <ul class="inline-flex flex-row flex-wrap justify-center gap-2 my-2 mx-0">
                    {% for tag in tags %}
                    <li class="inline-block border border-solid rounded-2xl border-black">
                        <a href="/tags/{{ tag }}/" class="block py-0.5 px-2 no-underline text-center text-xs">{{ tag }}</a>
                    </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </header>

    <hr class="my-2">

    <div class="prose max-w-none prose-h1:font-normal prose-h2:font-normal prose-h3:font-normal prose-p:leading-7 prose-p:my-4 prose-li:my-0">
        {{ content | safe }}
    </div>

</article>

<div class="mt-8">
    {% if updated %}
    <p class="mb-2 text-sm"><i>Last Updated: <time datetime="{{ updated | dateHtmlString }}" title="{{ updated | dateHtmlString }}">{{ updated | dateReadable }}</time></i></p>
    {% endif %}
    
    
    <p class="text-sm">
        This post is licensed under <a class="underline" href="http://creativecommons.org/licenses/by/4.0/">CC BY 4.0</a> by the author.
        <!-- {%- if image %} Header photo from <a href="{{ image }}">Unsplash</a>.<br>{%- endif %} -->
        The source for this page is available on {% page_source_link 'GitHub' %}.
    </p>
</div>